{{#if messages.length}}
  {{#each messages}}
    <div class="message d-flex flex-column">
      <div class="info d-flex">
        <p class="date text-light pe-1">{{this.date}}</p>
        <p class="email text-light ps-1">{{this.author}}</p>
        <p class="text text-light pe-1">{{this.comment}}</p>
      </div>
    </div>
  {{/each}}
{{/if}}